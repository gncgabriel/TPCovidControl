@model IEnumerable<CovidView.Models.CovidInfo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Casos_Confirmados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mortes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recuperados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pais)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Casos_Confirmados)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mortes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recuperados)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pais)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<CovidView.Models.Pais>

@{
    ViewData["Title"] = "Index";
}

<h1>Listagem de países</h1>
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Adicionar país</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>País</th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Nome">@item.Nome</a>
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Nome">Ver detalhes</a> |
                        <a asp-action="Edit" asp-route-id="@item.Nome">Editar país</a> |
                        <a asp-action="Delete" asp-route-id="@item.Nome">Apagar país</a>
                    </td>
                }
                else
                {
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Nome">Ver detalhes</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
